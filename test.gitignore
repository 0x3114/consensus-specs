#!/bin/bash
set -e
# set -u
set -x

if [[ $1 == "clean" ]]
then
    make clean
    python3 -m venv venv; . venv/bin/activate; pip3 install wheel
fi

# Install
. venv/bin/activate; pip install .
make pyspec
make install_test

# Test
. venv/bin/activate
cd ./tests/core/pyspec
python -m pytest --disable-bls eth2spec/test/phase0/unittests/fork_choice/test_on_attestation.py